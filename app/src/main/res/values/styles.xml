<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="TabForLoadTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProgressTheme" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="ProgressPrimaryTheme" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/primaryDarkColor</item>
    </style>

    <style name="ProgressDarkTheme" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
    </style>

    <style name="ProgressFavTheme" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/red_heart_c73e3a</item>
    </style>

    <style name="SecondSlider" parent="@style/Widget.MaterialComponents.Slider">
        <item name="labelStyle">@style/SecondTooltip</item>
    </style>

    <style name="SecondTooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="backgroundTint">@color/secondaryColor</item>
    </style>

    <style name="TextForEditTextLayout">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:letterSpacing">0.15</item>
    </style>


</resources>
