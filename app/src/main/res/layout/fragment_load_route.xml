<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="viewModel" type="tw.com.walkablecity.loadroute.LoadRouteViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".loadroute.LoadRouteFragment">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager_route"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs_load_route"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                app:tabIndicator="@color/primaryColor"
                app:tabTextAppearance="@style/TabForLoadTitle"
                app:tabSelectedTextColor="@color/secondaryColor"
                app:tabTextColor="@color/primaryColor"/>
        </androidx.viewpager.widget.ViewPager>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>