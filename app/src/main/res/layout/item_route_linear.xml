<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="route"
            type="tw.com.walkablecity.data.Route" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/map_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_big_office_building"
            tools:layout_editor_absoluteX="47dp"
            tools:layout_editor_absoluteY="30dp" />

        <TextView
            android:id="@+id/route_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/noto_sans"
            android:text="@{route.title}"
            android:letterSpacing="0.15"
            android:textColor="@color/primaryDarkColor"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/map_view"
            app:layout_constraintTop_toTopOf="@+id/map_view"
            tools:text="第一條路" />

        <TextView
            android:id="@+id/select_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:minWidth="100dp"
            android:minHeight="40dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_walker_ongoing"
            android:fontFamily="@font/noto_sans"
            android:letterSpacing="0.15"
            android:text="@string/select_route"
            android:textColor="@color/primaryDarkColor"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/map_view"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>